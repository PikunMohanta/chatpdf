# Local Development Environment
# This file contains safe defaults for local development

# General
DEBUG=True
SECRET_KEY=dev-secret-key-change-in-production

# AWS Configuration (optional for local dev)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_DEFAULT_REGION=us-east-1
# S3_BUCKET_NAME=newchat-documents

# AWS Cognito (optional for local dev)
# COGNITO_USER_POOL_ID=your-cognito-user-pool-id
# COGNITO_CLIENT_ID=your-cognito-client-id
# COGNITO_REGION=us-east-1

# OpenAI / OpenRouter API (optional for local dev - app will use mock responses)
# OPENAI_API_KEY=your-openai-api-key
OPENROUTER_API_KEY=

# Database (PostgreSQL) - optional for local dev
# DATABASE_URL=postgresql://username:password@localhost:5432/newchat

# Redis (for caching and sessions) - optional for local dev
# REDIS_URL=redis://localhost:6379/0

# Celery (for background tasks) - optional for local dev
# CELERY_BROKER_URL=redis://localhost:6379/1
# CELERY_RESULT_BACKEND=redis://localhost:6379/2

# FastAPI Settings
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# File Upload Settings
MAX_FILE_SIZE=50
ALLOWED_FILE_TYPES=pdf

# Logging
LOG_LEVEL=INFO
